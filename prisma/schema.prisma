generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String     @unique
  phone       String     @unique
  photo       String?
  role        UserRole
  status      UserStatus @default(Active)
  password    String
  otp         String?
  otpExpireAt DateTime?
  isDeleted   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("users")
}

model Notice {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  type               String
  department         String
  status             NotificationStatus @default(Published)
  publishedOn        DateTime
  employeeId         String
  employeeName       String
  employeeDepartment String
  attachment         String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@map("notice")
}

enum NotificationStatus {
  Published
  Unpublished
  Drafted
}

enum UserRole {
  User
  Admin
}

enum UserStatus {
  Active
  Blocked
}
